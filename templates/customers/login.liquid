<style>

  .login-page-container-fluid {
    background: var(--color-secondary);
  }
  .login-page-container-fluid .content-wrapper {
    background: var(--color-secondary);
    border: none;
    overflow: hidden;
    max-width: 480px;
    margin: 0 auto;
    border-radius: 0;
  }
  .login-page-container-fluid .content-header {
    flex-direction: column;
    padding: 40px 40px 0;
    border: none;
  }
  .login-page-container-fluid .content-header p {
    margin-bottom: 20px;
  }
  .login-page-container-fluid .content-body {
    padding: 0 40px 40px;
    overflow: auto;
  }
  .login-page-container-fluid input:not([type="submit"]) {
    margin-bottom: 10px;
    border: 1px solid #A0A0A0;
    width: 100%;
    height: 46px;
    background: #FAFAFA;
    padding-left: 15px;
    font-family: 'TiemposHeadline-Medium';
    font-size: 14px;
    letter-spacing: 0.56px;
    line-height: 16px;
    color: #A0A0A0;
  }
  .login-page-container-fluid #forgot_password {
    text-align: center;
  }
  .login-page-container-fluid #forgot_password a {
    text-decoration: underline;
    cursor: pointer;
  }
  .login-page-container-fluid #forgot_password a:hover {
    color: var(--color-grey-2);
  }
  .login-page-container-fluid .action_bottom {}
  .login-page-container-fluid .action_bottom input {
    margin-top: 30px;
    margin-bottom: 30px;
  }
  .login-page-container-fluid .action_bottom div {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .login-page-container-fluid .action_bottom div p {}
  .login-page-container-fluid .action_bottom div a {
    text-decoration: underline;
    margin-left: 5px;
    cursor: pointer;
  }

  @media screen and (max-width: 767px) {
    .login-page-container-fluid {
      padding: 0;
    }
    .login-page-container-fluid .container {
      padding: 0;
    }
    .login-page-container-fluid .container .col {
      padding: 0;
    }
    .login-page-container-fluid .content-wrapper {
      width: 375px;
      max-width: 100%;
    }
    .login-page-container-fluid .content-header {
      padding-left: 15px;
      padding-right: 15px;
    }
    .login-page-container-fluid .content-body {
      padding-left: 15px;
      padding-right: 15px;
    }
  }
</style>

<div class="container-fluid login-page-container-fluid">
  <div class="container">
    <div class="row">
      <div class="col col-12">
        <div class="content-wrapper">
          <div class="content-header">
            <h3 class="text-center">
              {% capture current_time %}
                {{ "now" | date: "%H%M" }}{% endcapture %}
              {% if '1200' > current_time %}
                Good Morning
              {% else %}
                Good Afternoon
              {% endif %}
            </h3>
            <p class="text-center">Please enter your login details to access your account.</p>
          </div>
          <div class="content-body">
            <div id="template">
              <div id="customer">
                {% form 'customer_login' %}
                  <input
                    type="hidden"
                    name="checkout_url"
                    value="/" />
                  {{ form.errors | default_errors }}

                  <div id="login_email" class="clearfix large_form">
                    <input
                      type="email"
                      placeholder="Email"
                      value=""
                      name="customer[email]"
                      id="customer_email"
                      class="form-login"
                      size="30"
                      required="required" />
                  </div>

                  {% if form.password_needed %}
                    {% comment %}
                    Customer Account Login
                    {% endcomment %}
                    <div id="login_password" class="clearfix large_form">
                      <input
                        type="password"
                        value=""
                        placeholder="Password"
                        name="customer[password]"
                        id="customer_password"
                        class="form-login"
                        size="16"
                        required="required" />
                      <div id="forgot_password">
                        {%- comment -%}
                        <a href="#" onclick="showRecoverPasswordForm();return false;">Forgotten your password?</a>
                        {%- endcomment -%}
                        <a
                          class="reset-Password-Modal-Toggle"
                          data-bs-target="#resetPasswordModalToggle"
                          data-bs-toggle="modal"
                          data-bs-dismiss="modal">Forgotten your password?</a>
                      </div>
                    </div>
                  {% endif %}

                  <div class="action_bottom text-center">
                    <input
                      class="btn primary responsive"
                      type="submit"
                      value="Sign In" />
                    <div>
                      <p class="v2">
                        Don't have an account?
                        {%- comment -%}
                        <a href="https://www.bramleyproducts.co.uk/account/register">Register here</a>
                        {%- endcomment -%}
                        <a
                          class=""
                          data-bs-target="#registerModalToggle"
                          data-bs-toggle="modal"
                          data-bs-dismiss="modal">Register here</a>
                      </p>
                    </div>
                  </div>
                {% endform %}
              </div>

              {% comment %}
              Recover Password Form


              <div id="recover-password" style='display:none'>
              <div class="template_header">
              <h2 class="title">Reset your Password</h2>
              <p class="note">We will send you an email to reset your password.</p>
              </div>

              {% form 'recover_customer_password' %}
              {{ form.errors | default_errors }}

              <div id="recover_email" class="clearfix large_form">
              <label for="email" class="large">Email</label>
              <input type="email" value="" size="30" name="email" id="recover-email" class="large" />
              </div>
              <div class="action_bottom">
              <input class="btn btn-primary" type="submit" value="Submit" />
              <span class="note">or <a href="#" onclick="hideRecoverPasswordForm();return false;">Cancel</a></span>
              </div>
              {% endform %}
              </div>
              {% endcomment %}

              {% comment %}
              Guest Login form for shops with optional customer accounts. This form is displayed only when users click on the checkout link
              on the cart page.
              {% endcomment %}


              <div id="guest">
                <div class="template_header">
                  <h3 class="title">Guest Login</h3>
                </div>
                {% form 'guest_login' %}
                  <input
                    class="btn primary"
                    type="submit"
                    value="Continue as Guest" />
                {% endform %}
              </div>

            </div>

            {%- comment -%}
            <script type="text/javascript">
            function showRecoverPasswordForm() {
            document.getElementById('recover-password').style.display = 'inline-block';
            document.getElementById('customer').style.display='none';
            }

            function hideRecoverPasswordForm() {
            document.getElementById('recover-password').style.display = 'none';
            document.getElementById('customer').style.display = 'inline-block';
            }

            if (window.location.hash == '#recover') { showRecoverPasswordForm() }
            </script>
            {%- endcomment -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>