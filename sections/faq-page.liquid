<h3>{{ section.settings.tab1 }}</h3>
<p>{{ section.settings.tab-content }}</p>
<div></div>
<div class="page-width">
  <div class="grid">
    <div class="grid__item medium-up--five-sixths medium-up--push-one-twelfth">
      <div class="section-header text-center">
        <h1>{{ page.title }}</h1>
      </div>

      <div class="rte">
        {{ page.content }}
      </div>

      <div class="faq">
        <div class="tab">
          <input
            type="checkbox"
            id="tab1"
            class="tab-toggle">
          <label for="tab1" class="tab-label">{{ section.settings.tab1 }}</label>
          <div class="tab-content">
            {{ section.settings.tab-content }}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "faq",
    "settings": [
      {
        "type": "text",
        "label": "Questions",
        "id": "tab1"
      }, {
        "type": "richtext",
        "label": "Answers",
        "id": "tab-content"
      }, {
        "type": "checkbox",
        "label": "Show faq",
        "id": "tab-toggle",
        "default": true
      }

    ],

    "presets": [
      {
        "category": "text",
        "name": "faq"
      }
    ]
  }
{% endschema %}