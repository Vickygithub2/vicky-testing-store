<div class="faq">
  <div class="tab">
    <input
      type="checkbox"
      id="tab1"
      class="tab-toggle">
    <label for="tab1" class="tab-label">{{ section.settings.tab1 }}</label>
    <div class="tab-content">
      {{ section.settings.tab-content }}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "faq",
    "settings": [
      {
        "type": "text",
        "label": "Questions",
        "id": "tab1"
      }, {
        "type": "richtext",
        "label": "Answers",
        "id": "tab-content"
      }, {
        "type": "checkbox",
        "label": "Show faq",
        "id": "tab-toggle",
        "default": true
      }
    ],

    "presets": [
      {
        "category": "text",
        "name": "questions"

      }, {
        "category": "richtext",
        "name": "answers"

      }
    ]
  }
{% endschema %}